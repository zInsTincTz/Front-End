<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach(post => { %>
<h2><%= post.title %></h2>
<% if (post.composeContent.length > 100) { %>
<p>
  <%= post.composeContent.substring(0, 100) %> ...
  <a href="/posts/<%= post.title %>">Read More</a>
</p>

<% } else { %>
<p><%= post.composeContent %></p>
<% } %> <% }) %> <%- include("partials/footer"); -%>
